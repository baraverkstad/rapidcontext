<?xml version="1.0" encoding="UTF-8"?>

<ui class="login-app">
  <Dialog id="loginDialog" title="Login" system="true" closeable="false" resizeable="false" style="width: 450px;">
    <Form id="loginForm">
      <div id="loginError" class="error hidden">
      </div>
      <div id="loginWarning" class="warning hidden">
        You are currently logged in as <strong id="loginName">Name</strong>.
        Please login as a user with access to this application.
      </div>
      <table w="100%">
        <tbody w="100%">
          <tr>
            <th class="label" style="width: 130px; padding: 1em 0.5em; text-align: right;">Login / Email:</th>
            <td style="padding-top: 0.5em;" w="100%-140">
              <TextField id="loginUser" name="user" required="true" w="100%-10" />
              <FormValidator name="user" mandatory="false" message="A user name or email is required" style="padding: 3px 0 6px 0;" />
            </td>
          </tr>
          <tr>
            <th class="label" style="width: 130px; padding: 1em 0.5em; text-align: right;">Password:</th>
            <td style="padding-top: 0.5em;" w="100%-140">
              <TextField id="loginPassword" name="password" type="password" w="100%-10" />
            </td>
          </tr>
        </tbody>
      </table>
      <div style="margin-top: 1em; text-align: right;">
        <Button id="loginAuth" type="submit" highlight="true" icon="fa fa-lg fa-check">Login</Button>
      </div>
    </Form>
  </Dialog>
</ui>
